/* 修改后的 WXSS */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 30rpx;
  margin: 0;
  padding: 0;
  position: relative;
}

.illustration-container {
  position: relative;
  width: 750rpx;
  height: 500rpx;
  margin: 0 auto;
  overflow: hidden;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.illustration-title {
  position: absolute;
  left: 30rpx;
  top: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  z-index: 10;
}

.constitution-circle {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #3bb4f2;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(59, 180, 242, 0.3);
  z-index: 5;
}

.constitution-text {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  padding: 10rpx;
}

.connection-lines {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}

.connection-line {
  position: absolute;
  height: 2rpx;
  background-color: #3bb4f2;
  transform-origin: 0 0;
  z-index: 1;
}

.food-nodes {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 3;
}

.food-node {
  position: absolute;
  background-color: #fff;
  border-radius: 60rpx;
  padding: 15rpx 25rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,.1);
  width: 100rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 3;
}

.food-name {
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

/* 其余样式保持不变 */
.details-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
  display: block;
  padding-left: 10rpx;
  border-left: 6rpx solid #3bb4f2;
}

.food-details {
  padding: 30rpx;
}

.food-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.food-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  background-color: #f0f7ff;
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid #eee;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #3bb4f2;
}

.card-content {
  padding: 20rpx 25rpx;
}

.content-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.content-value {
  font-size: 26rpx;
  color: #333; /* 确保颜色不是白色或透明 */
  line-height: 1.6;
  display: block; /* 确保是块级元素 */
  opacity: 1; /* 确保不透明 */
  visibility: visible; /* 确保可见 */
}

.back-btn {
  margin: 40rpx 20rpx;
  padding: 20rpx;
  background-color: #3bb4f2;
  color: #fff;
  font-size: 30rpx;
  border-radius: 100rpx;
  box-shadow: 0 6rpx 16rpx rgba(59, 180, 242, 0.4);
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 10;
}

.back-text {
  margin-left: 10rpx;
}